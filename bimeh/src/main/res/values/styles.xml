        <!--<item name="android:windowBackground">@color/windowBackground</item>-->
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="IconFontsf" parent="android:TextAppearance">
        <item name="fontPath">font/icomoonf.ttf</item>
    </style>

    <style name = "MyMaterialTheme.AppBarOverlay" parent = "ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name = "MyMaterialTheme.PopupOverlay" parent = "ThemeOverlay.AppCompat.Light" />


    <style name="IconText" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">font/MaterialIcons-Regular.ttf</item>
        <item name="android:textSize">@dimen/icon_size</item>
        <item name="android:textColor">@color/menuColor</item>

    </style>


