<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/windowsBackgroundColor"
    tools:context=".view.activity.main.MainBimeh">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/MyMaterialTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/MyMaterialTheme.PopupOverlay">

            <include layout="@layout/toolbar"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:elevation="6dp"
                        android:clipToPadding="false"
                        android:clickable="true"
                        android:layout_marginBottom="8dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/main_hotel_menu">

                        <android.support.v7.widget.CardView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            app:cardBackgroundColor="@color/cardViewBackgroundPrimary"
                            app:cardCornerRadius="75dp"
                            app:cardElevation="3dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/textColorSecondary"
                                    android:text="اقساطی"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_airplane"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginBottom="18dp"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:textColor="@color/text_color_main_menu"
                                android:text="بیمه مسافرتی"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:gravity="center"
                        android:elevation="6dp"
                        android:clickable="true"
                        android:clipToPadding="false"
                        android:layout_marginBottom="8dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/main_hotel_menu">

                        <android.support.v7.widget.CardView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentRight="true"
                            app:cardBackgroundColor="@color/cardViewBackgroundPrimary"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="3dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:textSize="12sp"
                                    android:textColor="@color/textColorPrimary"
                                    android:text="اقساطی"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_motocycle"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginBottom="18dp"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:textColor="@color/text_color_main_menu"
                                android:text="بیمه موتورسیکلت"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp">

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:elevation="6dp"
                        android:clipToPadding="false"
                        android:clickable="true"
                        android:layout_marginBottom="8dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/main_hotel_menu">

                        <android.support.v7.widget.CardView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            app:cardBackgroundColor="@color/cardViewBackgroundPrimary"
                            app:cardCornerRadius="75dp"
                            app:cardElevation="3dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/textColorSecondary"
                                    android:text="اقساطی"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_earthquake"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginBottom="18dp"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:textColor="@color/text_color_main_menu"
                                android:text="بیمه زلزله"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:gravity="center"
                        android:elevation="6dp"
                        android:clipToPadding="false"
                        android:clickable="true"
                        android:layout_marginBottom="8dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/main_hotel_menu">

                        <android.support.v7.widget.CardView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            app:cardBackgroundColor="@color/cardViewBackgroundPrimary"
                            app:cardCornerRadius="75dp"
                            app:cardElevation="3dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/textColorSecondary"
                                    android:text="اقساطی"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_fire" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginBottom="18dp"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:textColor="@color/text_color_main_menu"
                                android:text="بیمه آتش سوزی"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp">

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:gravity="center"
                        android:elevation="6dp"
                        android:clipToPadding="false"
                        android:clickable="true"
                        android:layout_marginBottom="8dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/main_hotel_menu">

                        <android.support.v7.widget.CardView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentRight="true"
                            app:cardBackgroundColor="@color/cardViewBackgroundPrimary"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="3dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:textSize="12sp"
                                    android:textColor="@color/textColorPrimary"
                                    android:text="اقساطی"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_accident"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginBottom="18dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:textColor="@color/text_color_main_menu"
                                android:text="بیمه شخص ثالث"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:elevation="6dp"
                        android:clipToPadding="false"
                        android:clickable="false"
                        android:alpha="0.5"
                        android:layout_marginBottom="8dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/main_hotel_menu">

                        <android.support.v7.widget.CardView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            app:cardBackgroundColor="@color/cardViewBackgroundPrimary"
                            app:cardCornerRadius="75dp"
                            app:cardElevation="3dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/textColorSecondary"
                                    android:text="اقساطی"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_person_org"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginBottom="18dp"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:textColor="@color/text_color_main_menu"
                                android:text="بیمه انفرادی و سازمانی"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:gravity="center"
                        android:elevation="6dp"
                        android:clipToPadding="false"
                        android:clickable="true"
                        android:layout_marginBottom="8dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/main_hotel_menu">

                        <android.support.v7.widget.CardView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentRight="true"
                            app:cardBackgroundColor="@color/cardViewBackgroundPrimary"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="3dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:textColor="@color/textColorPrimary"
                                    android:text="صدور آنلاین"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/imgMotocycle"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_electronic_device"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginBottom="18dp"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:textColor="@color/text_color_main_menu"
                                android:text="بیمه تجهیزات الکترونیک"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>